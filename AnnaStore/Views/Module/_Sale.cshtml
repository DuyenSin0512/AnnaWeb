@model IEnumerable<WatchStore.Models.MProduct>
<div class="single-left-sidebar sidebar-best-seller">
    <div class="left-title-area">
        <h2 class="left-title">Sản phẩm khuyến mãi</h2>
    </div>
    <div class="row">
        <div class="sidebar-best-seller-carousel">
            <div class="product-block">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>
                            <div class="product">
                                <div class="pic-news">
                                    <a href="~/@item.Slug"><img src="~/Public/library/product/@item.Image" alt="@item.Name" /></a>
                                    @if (item.Discount == 1)
                                    {
                                        <a href="#" class="new-mark-box">new</a> }
                                    else if (item.Discount == 3)
                                    { <a href="#" class="new-mark-box">sale</a>}
                                </div>

                                <h3>
                                    <a href="~/@item.Slug">@item.Name</a>
                                </h3>
                                <div class="price-box">
                                    @if (@item.Discount == 3)
                                    {
                                        <span class="price">@String.Format("{0:0,0₫}", @item.ProPrice)</span>
                                        <br />
                                        <span class="old-price">@String.Format("{0:0,0₫}", @item.Price)</span>


                                    }
                                    else
                                    {
                                        <span class="price">@String.Format("{0:0,0₫}", @item.ProPrice)</span>
                                    }


                                </div>
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.ProRate)
                                        {
                                            
                                        }
                                        else
                                        {
                                            
                                        }
                                    }
                                </div>
                                <div class="cart-product">

                                    <a href="~/@item.Slug">Xem sản phẩm</a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </div>
</div>


